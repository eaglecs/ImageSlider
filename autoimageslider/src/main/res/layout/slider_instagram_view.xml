<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.smarteist.autoimageslider.SliderPager
        android:id="@+id/vp_slider_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

    <com.smarteist.autoimageslider.scrollingpagerindicator.ScrollingPagerIndicator
        android:id="@+id/pager_indicator"
        app:spi_dotSelectedColor="#3973b6"
        app:spi_dotColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_gravity="center|bottom" />

</FrameLayout>